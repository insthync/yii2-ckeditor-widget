{
    "name": "insthync/yii2-ckeditor-widget",
    "description": "CKEditor widget for Yii2 (Forked from https://github.com/2amigos/yii2-ckeditor-widget to update for latest Yii2)",
    "type": "yii2-extension",
    "keywords": [
        "2amigos",
        "yii",
        "yii2",
        "yii 2",
        "extension",
        "widget",
        "ckeditor"
    ],
    "homepage": "https://github.com/insthync/yii2-ckeditor-widget",
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "2amigOS! Consulting Group",
            "email": "hola@2amigos.us",
            "homepage": "http://2amigos.us",
            "role": "Developer"
        },
        {
            "name": "Insthync",
            "role": "Developer"
        }
    ],
    "require": {
        "yiisoft/yii2": "~2.0.45",
        "ckeditor/ckeditor": "4.22",
        "sunhater/kcfinder": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.5.0",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "dosamigos\\ckeditor\\": "src"
        }
    },
    "extra": {
        "installer-types": ["bower-asset", "npm-asset"],
        "installer-paths": {
            "public/assets/{$vendor}/{$name}/": ["type:bower-asset", "type:npm-asset"]
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "fxp-asset": {
            "enabled": false
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
